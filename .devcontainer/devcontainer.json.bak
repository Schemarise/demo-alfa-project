{
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "schemarise.alfa"
      ]
    }
  },
  "containerEnv": {
    "ALFA_HOME": "/home/vscode/.alfa",
    "ALFA_TOOLS_PORT": "8000"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.alfa/bin"
  },
  "onCreateCommand": "${containerWorkspaceFolder}/.alfa/oncreate.sh",
  "postCreateCommand": "cp ${containerWorkspaceFolder}/.alfa/alfa-license.txt /home/vscode/.alfa/",
  "postStartCommand": "echo sdk default java 17.0.13-ms >> ~/.bashrc"
}
