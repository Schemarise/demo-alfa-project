{
  "image": "mcr.microsoft.com/devcontainers/universal:5",

  "features": {
    "ghcr.io/devcontainers/features/java": {
      "version": "21"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "schemarise.alfa"
      ]
    }
  },
  "containerEnv": {
    "ALFA_HOME": "/home/codespace/.alfa",
    "ALFA_TOOLS_PORT": "8000"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/codespace/.alfa/bin"
  },
  "onCreateCommand": "${containerWorkspaceFolder}/.alfa/oncreate.sh",
  "postCreateCommand": "sdk default java 21.0.9-ms && sdk use java 21.0.9-ms && cp ${containerWorkspaceFolder}/.alfa/alfa-license.txt /home/codespace/.alfa/"
}
